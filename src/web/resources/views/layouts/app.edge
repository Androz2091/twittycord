<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Libraries CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- Custom CSS -->
    <link href="/public/assets/css/style.css" rel="stylesheet">

    <link rel="shortcut icon" href="/public/assets/img/favicon.png" type="image/png">
    <title>{{ title }}</title>
</head>

<body>
    <main>
        <div class="container py-4">
            <nav class="navbar navbar-light navbar-expand-lg mb-3 border-bottom">
                <div class="container-fluid">
                    <a href="/" class="navbar-brand mb-2 text-decoration-none fw-bold fs-4 color-discord-dark hover mb-lg-0">
                        TWITTYCORD
                    </a>
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
                    </div>
                    @if(user.isAuthenticated)
                    <div class="dropdown">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="userDropdownMenu"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            {{ user.username }}#{{ user.discriminator }}
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end text-small" aria-labelledby="userDropdownMenu">
                            <li><a class="dropdown-item disabled text-discord-dark">{{ user.username }}#{{ user.discriminator }}</a></li>
                            <li><a class="dropdown-item" href="/user/dashboard">Dashboard</a></li>

                            <!-- divider -->
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/auth/discord/logout">Sign out</a></li>
                        </ul>
                    </div>
                    @else
                    <a href="/auth/discord" class="btn btn-outline-primary">LOGIN WITH DISCORD</a>
                    @end
                </div>
            </nav>

            @!section('body')

            <footer class="pt-3 mt-4 text-muted border-top">
                This project is free and <a href="https://github.com/Androz2091/twittycord" target="_blank">open source</a>. Made with ❤️ by <a href="https://github.com/thedevanand" target="_blank">devanand7800</a> and <a href="https://github.com/Androz2091" target="_blank">Androz2091</a>.
                &copy; <script>
                    document.write(new Date().getFullYear())
                </script>
            </footer>

            
            <div class="toast-container position-fixed top-0 end-0 p-3">
                @each(notif in notifications)
                    <div class="toast align-items-center text-white bg-{{ notif.type }} border-0 px-2" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="d-flex">
                            <div class="toast-body">{{ notif.message }}</div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                @endeach
            </div>

            @section('scripts')
                <!-- Libraries JS -->            
                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
                <script>
                    feather.replace();

                    $('.toast').each((i, el) => (new bootstrap.Toast(el)).show());

                    function showToastMessage(message, type) {
                        let id = Date.now();
                        
                        let html = `<div class="toast align-items-center text-white bg-${type} border-0 px-2" id="toast-${id}" role="alert" aria-live="assertive" aria-atomic="true">
                                        <div class="d-flex">
                                            <div class="toast-body">${message}</div>
                                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                                        </div>
                                    </div>`;

                        $('.toast-container').append(html);
                        
                        (new bootstrap.Toast(`#toast-${id}`)).show()
                    }
                </script>
            @end
        </div>
    </main>
</body>

</html>